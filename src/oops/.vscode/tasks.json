{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "kill ${fileBasenameNoExtension}.exe",
      "type": "shell",
      "command": "if (Get-Process -Name '${fileBasenameNoExtension}' -ErrorAction SilentlyContinue) { Stop-Process -Name '${fileBasenameNoExtension}' -Force } else { Write-Output 'Process not running' }",
      "problemMatcher": []
    },
    {
      "label": "g++ build",
      "type": "shell",
      "command": "C:/Softwares/mingw64/bin/g++.exe",
      "args": [
        "-std=c++17",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": ["kill ${fileBasenameNoExtension}.exe"],
      "problemMatcher": ["$gcc"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      }
    },
    {
      "label": "build and run",
      "type": "shell",
      "dependsOn": ["g++ build"],
      "dependsOrder": "sequence",
      "command": "${fileDirname}\\${fileBasenameNoExtension}.exe",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    }
  ]
}
